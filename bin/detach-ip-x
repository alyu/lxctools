die () {
    echo >&2 "$@"
    exit 1
}

name=lxc-node
basedir=/var/lib/lxc

rel_dir=`dirname "$0"`
root_dir=`cd $rel_dir;pwd`
root_dir=${root_dir%/*}

[ -e $root_dir/etc/config ] && . $root_dir/etc/config

start=1
stop=6
incr=10

[ "$#" -lt 1 ] && die "sudo $(basename $0) <start container #> [stop container #] [$incr] [$name]"

[ `whoami` != "root" ] && echo "Do: sudo $(basename $0)" && exit 1

[ "$#" -eq 1 ] && start=$1 stop=$start
[ "$#" -ge 2 ] && [[ "$2" =~ ^[0-9]+$ ]] && start=$1 stop=$2
[ "$#" -ge 2 ] && [[ ! "$2" =~ ^[0-9]+$ ]] && start=$1 stop=$1 name=$2
[ "$#" -ge 3 ] && [[ "$3" =~ ^[0-9]+$ ]] && incr=$3
[ "$#" -ge 3 ] && [[ ! "$3" =~ ^[0-9]+$ ]] && name=$3
[ "$#" -ge 4 ] && incr=$3 name=$4

ip_address=10.0.3

eth=eth0
echo "Choose your ethX interface to detach/delete;"
read -p" for bind public/private IPs [default=eth0]: " e
[ ! -z "$e" ] && eth=$e

# Ask basic public/private IP address.
pip_address=10.0.10
read -p "Basic IP C class prefix [default=$pip_address]: " b
[ ! -z "$b" ] && pip_address=$b 

base=0
echo "start=$start, stop=$stop, name=$name, incr=$incr"
read -p "Start from $pip_address.M [0 + $incr] to attach to #N static IP address: " x
[ ! -z "$x" ] && base=$x

count=1
for (( i=$start; i <= $stop; i++ )) 
do
  n=$(($count*$incr+$base))
  phynode=`hostname`
  echo "-- Remove $eth:$name-$i in the interface file of physical node \"$phynode\"."
  
  sed -i".bak" "/^auto $eth:$name-$i/,+5d" /etc/network/interfaces
  
  echo "-- Detached $pip_address.$n public/private IP from static $ip_address.$n IP."
  iptables -t nat -D PREROUTING --dest $pip_address.$n -j DNAT --to $ip_address.$n
  iptables -t nat -D POSTROUTING --source $ip_address.$n -j SNAT --to $pip_address.$n
  count=$(($count + 1))
done
service networking restart
