die () {
    echo >&2 "$@"
    exit 1
}

name=lxc-node

start=1
stop=6
mode="-w"

[ "$#" -lt 1 ] && die "$(basename $0) <start container #> [stop container #] [$name] [-w|-r]"

[ "$#" -eq 1 ] && start=$1 stop=$start
[ "$#" -ge 2 ] && [[ "$2" =~ ^[0-9]+$ ]] && start=$1 stop=$2
[ "$#" -ge 2 ] && [[ ! "$2" =~ ^[0-9]+$ ]] && start=$1 stop=$1 name=$2
[ "$#" -ge 3 ] && name=$3
[ "$#" -ge 4 ] && name=$3 mode=$4

echo "start=$start, stop=$stop, name=$name, $mode"
for (( i=$start; i <= $stop; i++ ))
do
  echo "Shutdown container $name-$i"
  sudo lxc-shutdown -n $name-$i $mode
done
