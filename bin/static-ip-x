die () {
    echo >&2 "$@"
    exit 1
}

name=lxc-node
basedir=/var/lib/lxc

rel_dir=`dirname "$0"`
root_dir=`cd $rel_dir;pwd`
root_dir=${root_dir%/*}

[ -e $root_dir/etc/config ] && . $root_dir/etc/config

start=1
stop=6
incr=10

[ "$#" -lt 1 ] && die "$(basename $0) <start container #> [stop container #] [$incr] [$name]"

[ "$#" -eq 1 ] && start=$1 stop=$start
[ "$#" -ge 2 ] && [[ "$2" =~ ^[0-9]+$ ]] && start=$1 stop=$2
[ "$#" -ge 2 ] && [[ ! "$2" =~ ^[0-9]+$ ]] && start=$1 stop=$1 name=$2
[ "$#" -ge 3 ] && [[ "$3" =~ ^[0-9]+$ ]] && incr=$3
[ "$#" -ge 3 ] && [[ ! "$3" =~ ^[0-9]+$ ]] && name=$3
[ "$#" -ge 4 ] && incr=$3 name=$4

ip_address=10.0.3
base=0
echo "start=$start, stop=$stop, name=$name, incr=$incr"
read -p "Start from $ip_address.N [0 + $incr]: " x
[ ! -z "$x" ] && base=$x

count=1
for (( i=$start; i <= $stop; i++ )) 
do
  n=$(($count*$incr+$base))
  echo "lxc.network.ipv4 = $ip_address.$n" | sudo tee -a $basedir/$name-$i/config
  count=$(($count + 1))
done
